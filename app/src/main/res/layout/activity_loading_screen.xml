<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/login_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".activities.LoadingScreenActivity">

    <TextView
        android:text="@string/dobrodosli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dobrodosli"
        android:textSize="35dp"
        android:textColor="@color/primary_text"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/logoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dobrodosli"
        app:srcCompat="@drawable/minus_logo" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/progressBar"
        android:progressDrawable="@drawable/progress_bar"
        android:layout_below="@+id/logoView"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="@string/ucitavanje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ucitavanje"
        android:textSize="16dp"
        android:textColor="@color/primary_text"
        android:layout_below="@+id/progressBar"
        android:layout_centerHorizontal="true" />

</RelativeLayout>